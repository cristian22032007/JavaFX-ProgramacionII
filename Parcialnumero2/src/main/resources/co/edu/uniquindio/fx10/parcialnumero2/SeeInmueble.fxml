<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" style="-fx-background-color: #BDBDBD"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.fx10.parcialnumero2.controller.VerInmuebles">
    <VBox spacing="20" VBox.vgrow="ALWAYS" alignment="CENTER" style="-fx-background-color: #ABDFDF">
        <padding>
            <Insets bottom="25" right="25" left="25" top="25"/>
        </padding>
        <HBox spacing="20" alignment="CENTER_LEFT">
            <Button fx:id="btnVolver"
                    text="← Volver"
                    onAction="#onVolverMenu"
                    style="-fx-background-color: white;
                              -fx-text-fill: #2196F3;
                              -fx-font-weight: bold;
                              -fx-background-radius: 5;
                              -fx-cursor: hand;">
                    <padding>
                        <Insets bottom="15" top="15" left="10" right="10" />
                    </padding>
            </Button>
            <Label text="Lista de Inmuebles"  style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        </HBox>
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(1,0,0,0.7), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <Label style="-fx-text-fill: #34495e; -fx-font-size: 16px; -fx-font-weight: bold;" text="Lista de Productos">
                <VBox.margin>
                    <Insets bottom="10" />
                </VBox.margin>
            </Label>

            <TableView fx:id="tablaInmuebles" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTipo" prefWidth="100" text="Tipo" />
                    <TableColumn fx:id="colCiudad" prefWidth="200" text="Ciudad" />
                    <TableColumn fx:id="colNumeroHabitantes" prefWidth="280" text="Numero de Habitantes" />
                    <TableColumn fx:id="colNumeroPisos" prefWidth="120" text="Numero de pisos" />
                    <TableColumn fx:id="colPrecio" prefWidth="100" text="Precio" />
                    <TableColumn fx:id="colDescripcion" prefWidth="100" text="Aprobada" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <VBox.margin>
                    <Insets top="15" />
                </VBox.margin>
                <Button fx:id="btnEliminar" onAction="#onEliminarProducto" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="Eliminar Producto" />
            </HBox>
        </VBox>
    </VBox>

</VBox>
