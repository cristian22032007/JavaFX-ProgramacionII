<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.fx10.sistemamotos.controller.Sistem"
      spacing="20" style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Encabezado -->
    <Label text="Ingresar nueva moto" style="-fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="15"/>
        </font>
    </Label>

    <!-- Formulario -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="SOMETIMES">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <HBox style="-fx-background-color: #BDBDBD;" VBox.vgrow="ALWAYS">
            <ScrollPane fx:id="ScrollPane" HBox.hgrow="SOMETIMES">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>

            </ScrollPane>
            <VBox fx:id="ContentCreator" alignment="CENTER" spacing="10" style="-fx-background-color: #ADD8E6" prefWidth="600">

                <GridPane hgap="15" vgap="20" >
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <!-- Placa -->
                    <Label text="Placa:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                        style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <TextField fx:id="txtPlaca" promptText="Ingrese la placa del vehiculo"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-font-size: 14px; -fx-padding: 8;"/>

                <!-- Marca -->
                    <Label text="Marca:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                        style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <TextField fx:id="txtMarca" promptText="Ingrese la marca del producto"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-font-size: 14px; -fx-padding: 8;"/>

                <!-- Modelo -->
                    <Label text="Modelo:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                        style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <TextField fx:id="txtModelo" promptText="Ingrese la descripciÃ³n del producto"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"
                       style="-fx-font-size: 14px; -fx-padding: 8;"/>


                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="300"/>
                    </columnConstraints>
                </GridPane>
            </VBox>
        </HBox>
        <!-- Botones -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>
            <Button fx:id="btnGuardar" text="Guardar Producto" onAction="#onGuardarMoto"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 25; -fx-cursor: hand; -fx-background-radius: 5;">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>
        </HBox>
    </VBox>
</VBox>


