<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.fx10.sistemagestiopizza.controller.SeeOrder"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <VBox style="-fx-background-color: #2196F3; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button fx:id="btnVolver"
                        text="← Volver"
                        onAction="#onVolverMenu"
                        style="-fx-background-color: white;
                               -fx-text-fill: #2196F3;
                               -fx-font-weight: bold;
                               -fx-background-radius: 5;
                               -fx-cursor: hand;">
                    <padding>
                        <Insets top="8" right="15" bottom="8" left="15"/>
                    </padding>
                </Button>

                <Label text="Mis Órdenes"
                       textFill="white"
                       style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <FlowPane fx:id="contentOrder"
                  hgap="15"
                  vgap="15"
                  style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </FlowPane>
    </center>

</BorderPane>